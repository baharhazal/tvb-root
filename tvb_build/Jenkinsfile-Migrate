pipeline {
    agent any

    environment{
        FULL_DOCKER_IMAGE_NAME = 'docker-repository.codemart.ro/tvb-migrate:latest'
    }

    stages {
        stage ('Test Migration'){
            agent {
                docker {
                    image '${FULL_DOCKER_IMAGE_NAME}'
                }
            }
            steps {
                sh '''#!/bin/bash
                    source activate tvb-run
                    cd tvb_build
                    bash install_full_tvb.sh
                    cd ..
                    python -m tvb.config.init.migrated_files_counter
                    exit 0
                '''
            }
        }
    }
    post {
        changed {
            mail to: 'robert.vincze@codemart.ro',
            subject: "Jenkins Pipeline ${currentBuild.fullDisplayName} changed status",
            body: """
                Result: ${currentBuild.result}
                Job: '${env.JOB_NAME}' [${env.BUILD_NUMBER}]'
                Check console output at ${env.BUILD_URL}"""
        }
    }
}